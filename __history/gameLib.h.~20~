#ifndef gameLibH
#define gameLibH
#include <iostream>
#include <FMX.Objects.hpp>

using namespace std;
class Player
{
	protected:
	string name;
	int currentPositionOnMap;
	int ownedMoney;
	TImage *playerImagePtr;

	public:
	Player();
	void setName();
	string getName();

};

class Port
{
	protected:
    string name;
	int portNumber;
	int conquerCost;
	int visitingPayment;
	int extensionLvl;
	int defensivePower;
	Player *owner;
	TImage *portImagePtr;

    public:
	Port();
	void setName();
	string getName();
};


